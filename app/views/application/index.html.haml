%section.full-screen#splash
  .right.easter-egg-counter
    %span.easter-egg-number 5
    %span.egg
  .text-center

    .aj-bitmoji
      = image_tag "bitmoji/aj.png",       :class => "forward"
      = image_tag "bitmoji/aj_left.png",  :class => "left hide"
      = image_tag "bitmoji/aj_right.png", :class => "right hide"
      = image_tag "bitmoji/aj_heart.png", :class => "heart hidden"
      = image_tag "bitmoji/aj_spit.png",  :class => "spit hidden"

    .main-text
      %h1 My name is AJ

      %h3 I'm an Entrepeneur and Full-Stack Developer
      %h3 Scroll down to see some things that I've built!

      .footer
        .h5
          P.S. I left a few surprises for you. Let me know if you find them!
          %span.glyphicon.glyphicon-sunglasses

        .social
          = link_to "mailto: hi@ajain.me" do
            .social-icon.mail
          = link_to "https://github.com/anshizzle/" do
            .social-icon.github
          = link_to "https://www.facebook.com/anshul.jain" do
            .social-icon.facebook
          = link_to "https://www.linkedin.com/in/anshul-jain-0a0b6923/" do
            .social-icon.linkedin
          = link_to "https://soundcloud.com/mynameisaaj" do
            .social-icon.soundcloud
          = link_to "https://twitter.com/anshizzle24" do
            .social-icon.twitter





  .icon.down#scroll-to-projects

%section#projects
  .projects-container
    - @projects.each do |p1, p2|
      .project{"data-project-name" => slug_name(p1.fetch("name")) }
        = logo_tag p1.fetch("name")
      .project{"data-project-name" => slug_name(p2.fetch("name")) }
        = logo_tag p2.fetch("name")

      = render :partial => 'application/project_description', :locals => { :project => p1 }
      = render :partial => 'application/project_description', :locals => { :project => p2 }

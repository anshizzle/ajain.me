    = image_tag "background/cloud.png", :style => "display: none;", :id => "background-cloud"
    = image_tag "bitmoji/aj_winking.png", :style => "display: none;", :id => "background-troll1"
    = image_tag "bitmoji/aj_surf.png", :style => "display: none;", :id => "background-troll2"
    = image_tag "bitmoji/aj_fire_dab.png", :style => "display: none;", :id => "background-troll3"
    = image_tag "bitmoji/aj_superman.png", :style => "display: none;", :id => "background-troll4"
